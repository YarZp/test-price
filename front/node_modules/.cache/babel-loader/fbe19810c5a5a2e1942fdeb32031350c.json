{"ast":null,"code":"import settings from '../assets/settings.svg';\nimport home from '../assets/home.svg';\nimport instagram from '../assets/instagram.svg';\nexport default {\n  // eslint-disable-next-line vue/multi-word-component-names\n  name: 'Cards',\n\n  data() {\n    return {\n      settings,\n      home,\n      instagram,\n      toggle: false\n    };\n  },\n\n  methods: {\n    buttonText(type) {\n      return type === 'Lite' ? 'Try 7 days for free' : 'Get started';\n    }\n\n  },\n  props: {\n    msg: String,\n    cards: Array,\n    descriptions: Array\n  }\n};","map":{"version":3,"mappings":"AA8DA,OAAOA,QAAP,MAAqB,wBAArB;AACA,OAAOC,IAAP,MAAiB,oBAAjB;AACA,OAAOC,SAAP,MAAsB,yBAAtB;AACA,eAAe;EACb;EACAC,IAAI,EAAE,OAFO;;EAGbC,IAAI,GAAG;IACL,OAAO;MACLJ,QADK;MAELC,IAFK;MAGLC,SAHK;MAILG,MAAM,EAAC;IAJF,CAAP;EAMD,CAVY;;EAWbC,OAAO,EAAE;IACLC,UAAU,CAACC,IAAD,EAAM;MACd,OAAOA,IAAI,KAAG,MAAP,GAAgB,qBAAhB,GAAuC,aAA9C;IACF;;EAHK,CAXI;EAgBbC,KAAK,EAAE;IACLC,GAAG,EAAEC,MADA;IAELC,KAAK,EAACC,KAFD;IAGLC,YAAY,EAACD;EAHR;AAhBM,CAAf","names":["settings","home","instagram","name","data","toggle","methods","buttonText","type","props","msg","String","cards","Array","descriptions"],"sourceRoot":"","sources":["/home/legion/project/interview/test-task/src/components/Cards.vue"],"sourcesContent":["\n<template>\n  <div>\n  <header>\n    <h1></h1>\n    <h1 class=\"card__title\">{{msg}}</h1>\n    <p class=\"card__description\">Choose a plan tailored to your needs</p>\n    <div class=\"toggle\">\n      <label :class=\"toggle===false ? 'bold':''\">Monthly</label>\n      <div class=\"toggle-btn\">\n        <input  v-model=\"toggle\" type=\"checkbox\" class=\"checkbox\" id=\"checkbox\" />\n        <label class=\"sub\" id=\"sub\" for=\"checkbox\">\n          <div class=\"circle\"></div>\n        </label>\n      </div>\n      <label :class=\"toggle===true ? 'bold':''\">Year</label>\n    </div>\n  </header>\n  <div class=\"cards\">\n    <div class=\"card\" v-for=\"card of cards\" :key=\"card.id\">\n      <div class=\"card__info\">\n\n        <h1 class=\"card__label\"> <img v-if=\"card.type==='Lite'\" alt=\"settings\" class=\"image\" :src=\"settings\"/>\n          <img v-if=\"card.type==='Pro'\" alt=\"home\" class=\"image\" :src=\"home\"/>\n          <img v-if=\"card.type==='Ultimate'\" alt=\"instagram\" class=\"image\" :src=\"instagram\"/>\n          {{card.type}}</h1>\n        <p class=\"card__description\">{{card.description}}</p>\n        <div class=\"card__price\">\n          <template v-if=\"!toggle\">\n            <h1>{{card.price.month}}</h1>\n            <p>per month</p>\n          </template>\n          <template v-else>\n            <h1>{{card.price.year}}</h1>\n            <p>per year</p>\n          </template>\n\n        </div>\n        <button class=\"card__btn\">{{buttonText(card.type)}}</button>\n        <h1 class=\"card__description__label\">{{card.type}} includes:</h1>\n        <div class=\"card__details\">\n          <ul>\n            <template v-for=\"description in descriptions\" :key=\"description.id\">\n              <li v-if=\"description.show=== card.type\">\n                {{ description.name }}\n              </li>\n            </template>\n\n          </ul>\n\n        </div>\n\n      </div>\n\n      <h1 class=\"card__footer\">See all feature</h1>\n  </div>\n\n  </div>\n  </div>\n</template>\n\n<script >\nimport settings from '../assets/settings.svg'\nimport home from '../assets/home.svg'\nimport instagram from '../assets/instagram.svg'\nexport default {\n  // eslint-disable-next-line vue/multi-word-component-names\n  name: 'Cards',\n  data() {\n    return {\n      settings,\n      home,\n      instagram,\n      toggle:false\n    }\n  },\n  methods: {\n      buttonText(type){\n        return type==='Lite' ? 'Try 7 days for free': 'Get started'\n      }\n  },\n  props: {\n    msg: String,\n    cards:Array,\n    descriptions:Array\n  }\n\n}\n</script>\n\n<script setup >\n</script>\n<style scoped>\n\n\n/*checkBox*/\nheader {\ncolor: hsl(233, 13%, 49%);\nmargin: 3.3rem 0;\ndisplay: flex;\nflex-direction: column;\njustify-content: center;\nalign-items: center;\n}\n.bold{\n  color: black;\n  font-weight: bold;\n}\n.toggle {\nmargin-top: 2rem;\ncolor: hsl(234, 14%, 74%);\ndisplay: flex;\nalign-items: center;\n}\n.toggle-btn {\nmargin: 0 1rem;\n}\n.checkbox {\ndisplay: none;\n}\n\n.sub {\nbackground: #0e8178;\ndisplay: flex;\njustify-content: flex-start;\nalign-items: center;\n/* height: 25px;\nwidth: 50px; */\n  height: 1.6rem;\n  width: 3.3rem;\n  border-radius: 1.6rem;\n  padding: 0.3rem;\n}\n.circle {\n  background-color: #fff;\n  height: 1.4rem;\n  width: 1.4rem;\n  border-radius: 50%;\n}\n.checkbox:checked + .sub {\n  justify-content: flex-end;\n}\n/* border radius */\n*, *::before, *::after {\n  box-sizing: border-box;\n  margin: 0;\n  padding: 0;\n}\n\n.cards{\n  font-family: Inter, sans-serif;\n  display: flex;\n  flex-wrap: wrap;\n  justify-content: center;\n  gap: 1rem;\n  margin: 2rem;\n}\n.image{\n  padding-right: 3px;\n}\n.card {\n  background: rgb(170,196,196);\n  background: linear-gradient(0deg, rgba(170,196,196,1) 0%, rgba(255,255,255,1) 24%, rgba(255,255,255,1) 100%);\n  padding: 4rem 3rem;\n  border-radius: 1rem;\n  width: 20rem;\n  color: #2a324b;\n  box-shadow: 0 0.2rem 0.5rem #e1e5ee;\n  cursor: pointer;\n  transition: box-shadow 300ms, transform 300ms;\n  display: flex;\n  flex-direction: column;\n  justify-content: space-between;\n}\n.card__footer {\n  padding-top: 1rem;\n  font-family: inherit;\n  color: black;\n  font-weight: bold;\n  cursor: pointer;\n  font-size: 1.2rem;\n}\n.card__title{\n  padding-top: 1rem;\n  font-family: inherit;\n  color: black;\n  font-weight: bold;\n  cursor: pointer;\n  font-size: 2rem;\n}\n.card__label {\n  display: flex;\n  align-items: flex-end;\n  font-size: 1.2rem;\n}\n.card__description {\n  padding-top: 5px;\n  display: flex;\n  align-items: flex-end;\n  font-size: 0.9rem;\n  opacity: 0.8;\n}\n.card__description__label {\n  display: flex;\n  align-items: flex-end;\n\n  font-size: 1rem\n}\n.card__price {\n  display: flex;\n  align-items: flex-end;\n  gap: 0.2rem;\n  margin: 2rem 0;\n  line-height: 1rem;\n}\n.card__details {\n  padding-right: 1rem;\n  display: flex;\n  align-items: flex-start;\n  margin-left: auto;\n  margin-right: auto;\n  margin-bottom: 1rem;\n}\n.card__price h1::before {\n  content: \"$\";\n  font-size: 2rem;\n  position: relative;\n  top: -0.1rem;\n}\n.card__price p {\n  font-size: 0.9rem;\n  opacity: 0.8;\n}\n\n.card__list > * {\n  margin-bottom: 0.2rem;\n}\n\n.card__btn {\n  width: 100%;\n  border: none;\n  margin-bottom: 1rem;\n  padding: 0.8rem 1rem;\n  font-family: inherit;\n  color: #fff;\n  font-weight: bold;\n  cursor: pointer;\n  background-color: #1a45b9;\n}\n\n.card:hover {\n\n  transform: scale(1.02);\n\n\n  background: rgb(25,27,29);\n  background: linear-gradient(0deg, rgba(25,27,29,1) 0%, rgba(0,114,199,1) 24%, rgba(39,181,255,1) 100%);\n  color: #f9fbff;\n}\n.card:hover .card__footer {\n  color: #ddd;\n}\n.card:hover .card__btn {\n  background-color: #0bceba;\n}\n.card-accent button {\n  background-color: #0e8178;\n  color: #ffffff;\n}\nul {\n  list-style: none;\n}\n\nul li:before {\n  color: #2e4793;\n  font-size: 24px;\n  content: 'âœ“';\n}\n.card:hover ul li:before  {\n  color: #0bceba\n}\n</style>\n"]},"metadata":{},"sourceType":"module"}